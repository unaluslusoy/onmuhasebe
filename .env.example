# Application
APP_NAME="Ön Muhasebe Sistemi"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost/onmuhasebe
APP_TIMEZONE=Europe/Istanbul

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=onmuhasebe
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=2592000
JWT_ALGORITHM=HS256

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@onmuhasebe.com
MAIL_FROM_NAME="${APP_NAME}"

# Redis (Optional - for caching)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_PATH=storage/logs

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60

# e-Fatura Integration
EFATURA_TEST_MODE=true
EFATURA_USERNAME=
EFATURA_PASSWORD=
EFATURA_COMPANY_VKN=

# e-Arşiv Integration
EARSIV_TEST_MODE=true
EARSIV_USERNAME=
EARSIV_PASSWORD=

# Backup
BACKUP_PATH=storage/backups
BACKUP_RETENTION_DAYS=30
